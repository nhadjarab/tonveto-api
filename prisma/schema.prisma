// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Auth {
  email String @unique @id
  passwordHash String
}

model Pet {
 id String @unique @id @default(cuid())
 sex String
 name String
 birth_date String
 species String
 breed String
 crossbreed Boolean
 sterilised Boolean
 owner User @relation(fields: [owner_id] , references: [id])
 owner_id String  
}

model User {
  id String @unique @id @default(cuid())
  first_name String  
  last_name String
  email String @unique
  birth_date String
  phone_number String
  profile_complete Boolean @default(false)
  pets Pet[] 
}

